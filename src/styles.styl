gray = #d0d0d0
orange = #F47A20
red = #fc435d
green = #00be8f
yellow = #faff76
blue = rgb(0, 120, 190)

bg-color(arguments)
  background arguments
  &:hover
    background darken(arguments, 25%)

body
  background blue
  font-family Helvetica, Arial, sans-serif

h1
  color white
  text-shadow: 2px 2px black;

button, input
  font-family Helvetica, Arial, sans-serif
  font-size 15px
  border none
  border-radius 5px
  padding 5px 10px
  margin 0 5px
  cursor pointer
  text-decoration none

input
  text-align left
  box-shadow: 2px 2px 0px 0px #999;
  height 20px

button
  font-weight bold
  color white
  height 30px
  text-align center

.kanbanBoard
  margin auto
  text-align center
  width 90%

.taskList
  width 31%
  margin 1.1%
  float left
  border-radius 15px
  background gray

.taskCard
  margin 10px
  padding 10px
  border-radius 5px
  background white
  box-shadow: 2px 2px 0px 0px #999
  position relative

  button.close
    position absolute
    top 5px
    left 5px
    bg-color(#F40020)
    font-size 12px
    height 20px
    width 20px
    line-height 20px
    vertical-align middle
    padding 0

.addTaskForm
  margin 10px
  input
    width 50%
  button
    bg-color(orange)

.buttonBar
  button
    width: 90px
    margin-top 10px
    &.forward
      bg-color(green)
    &.backwards
      bg-color(red)

.taskStats
  color white
  clear both
  font-size 20px
  margin-top 20px
  text-align center
  .statsGraph
    margin 0
    padding 0
    margin-bottom 5px
    list-style-type none
    li
      display inline-block
      height 25px
      &.backlog
        background red
      &.working
        background yellow
      &.done
        background green
      &:first-child
        border-radius 5px 0 0 5px
      &:last-child
        border-radius 0 5px 5px 0
